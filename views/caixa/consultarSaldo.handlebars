    resultado2.innerHTML = maskCurrency({{ valorTotalEstoque }});

    const resultado3 = document.getElementById("valorTotal");
    resultado3.innerHTML = maskCurrency({{ valorTotal }});

    function maskCurrency(valor, locale = 'pt-BR', currency = 'BRL') {
        return new Intl.NumberFormat(locale, {
            style: 'currency',
            currency
        }).format(valor)
    } 
</script>
